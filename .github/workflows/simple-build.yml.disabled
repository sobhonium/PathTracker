name: ğŸ“± Simple PathTracker Build

on:
  push:
    branches: [ main, master ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: ğŸ“¥ Checkout code
      uses: actions/checkout@v4

    - name: â˜• Setup Java 17
      uses: actions/setup-java@v4
      with:
        distribution: 'temurin'
        java-version: '17'

    - name: ğŸ—ï¸ Setup Gradle
      uses: gradle/gradle-build-action@v2

    - name: ğŸ”§ Make gradlew executable
      run: chmod +x ./gradlew

    - name: ğŸ“± Build APK
      run: ./gradlew assembleDebug --no-daemon

    - name: ğŸ“¤ Upload APK
      uses: actions/upload-artifact@v4
      with:
        name: PathTracker-APK
        path: app/build/outputs/apk/debug/app-debug.apk
        retention-days: 30

    - name: ğŸ“Š Build Summary
      run: |
        echo "ğŸ‰ PathTracker APK built successfully!"
        if [ -f app/build/outputs/apk/debug/app-debug.apk ]; then
          echo "ğŸ“ APK Location: app/build/outputs/apk/debug/app-debug.apk"
          echo "ğŸ“¦ APK Size: $(du -h app/build/outputs/apk/debug/app-debug.apk | cut -f1)"
          echo "âœ… APK is ready for download!"
        else
          echo "âŒ APK not found"
          ls -la app/build/outputs/apk/debug/ || echo "Debug directory not found"
        fi